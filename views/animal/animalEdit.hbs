<div class="container col-md-8 mt-3 mb-3 card bg-light">
    <form action="/animal/edit/{{animal._id}}" method="post">
 <h1 class="text text-danger text-center text-uppercase mt-3"> Edit Toy</h1>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Name</label>
        <input class="form-control" type="text" name="name" value= {{animal.name}} required>
      </div>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Brand Toy</label>
        <input class="form-control" type="text" name="brandName" value={{animal.brandName}} required>
      </div>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Image</label>
        <img src="{{animal.image}}" width="100" height="100" alt="">
        <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Quantity</label>
        <input class="form-control" type="number" name="quantity" value = {{animal.quantity}} required min="1" max="100">
      </div>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Price</label>
        <input class="form-control" type="number" name="price" value={{animal.price}} required >
      </div>
      <div class="form-group text-center mt-3">
        <input class="btn btn-primary mt-3" type="submit" value="Edit">
      </div>
    </form>

</div>