<div class="container col-md-8 mt-3 mb-3 card bg-light">
    <form action="/robot/add" method="post">
 <h1 class="text text-danger text-center text-uppercase mt-3">Add new toy</h1>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Name</label>
        <input class="form-control" type="text" name="name"  required>
      </div>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Brand Name</label>
        <input class="form-control" type="text" name="brandName"  required>
      </div>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Image</label>
        <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Quantity</label>
        <input class="form-control" type="number" name="quantity" required min="1" max="100" > 
      </div>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Price</label>
        <input class="form-control" type="number" name="price" required >
      </div>
      <div class="form-group text-center mt-3">
        <input class="btn btn-primary mt-3" type="submit" value="Add">
      </div>
    </form>

</div>